<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:AvaloniaNavigationSample.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AvaloniaNavigationSample.Views.HomeView"
             x:DataType="viewModels:HomeViewModel">
    <Grid RowDefinitions="*, *">
        <TextBox Grid.Row="0" HorizontalAlignment="Center" Text="{Binding Name}" Height="20"></TextBox>
        <Button Grid.Row="1" HorizontalAlignment="Center" Command="{Binding NavigateToDetail}">Go To Detail</Button>
    </Grid>
</UserControl>